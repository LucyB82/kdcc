<LoginWindow>:
    canvas.before:
        Color:
            rgba: (0.871, 0.725, 0.886,1)
        Rectangle:
            pos: 0,0
            size: 800, 600
    Image:
        source: 'logo.png'
        nocache: True
        id: logo_img
        pos: 275, 310
        size: 250, 250
    TextInput:
        id: username_input
        hint_text: 'Username'
        font_size: 20
        pos: 250, 265
        height: 35
        width: 300
        write_tab: False
        multiline: False
        on_text_validate: root.login()
    TextInput:
        id: password_input
        hint_text: 'Password'
        font_size: 20
        password: True
        pos: 250, 205
        height: 35
        width: 300
        write_tab: False
        multiline: False
        on_text_validate: root.login()
    Button:
        id: login_button
        font_size: 20
        pos: 325, 125
        text: "Login"
        size: (150,50)
        on_press: root.login()
    Label:
        id: success
        pos: (100,100)
        color: (0,0,0,1)
        text: ""


<LoginWindow>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Login"
        color: (0,0,0,1)
        font_size: 60
        center_x: root.x + 400
        center_y: root.y + 500
    Label:
        id: username_label
        text: "Username"
        color: (0,0,0,1)
        font_size: 30
        center_x: root.x + 175
        center_y: root.y + 400
    TextInput:
        id: username_input
        font_size: 20
        center_x: root.x + 300
        center_y: root.y + 430
        height: 35
        width: 300
    Label:
        id: password_label
        text: "Password"
        color: (0,0,0,1)
        font_size: 30
        center_x: root.x + 175
        center_y: root.y + 350
    TextInput:
        id: password_input
        font_size: 20
        password: True
        center_x: root.x + 300
        center_y: root.y + 380
        height: 35
        width: 300
    Button:
        id: login_button
        font_size: 20
        center_x: root.x + 375 
        center_y: root.y + 250
        text: "Login"
        size: (150,100)
        on_press: root.login()

<MainMenuWindow>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

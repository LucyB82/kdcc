# Reference main.py
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton


<LoginWindow>:
    canvas.before:
        Color:
            rgba: (0.871, 0.725, 0.886,1)
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: 'logo.png'
        nocache: True
        id: logo_img
        center_x: root.width/2
        center_y: root.height/3 * 2 + 42
        size: 250, 250
    TextInput:
        id: username_input
        hint_text: 'Username'
        font_size: 20
        center_x: root.width/2
        center_y: root.height/2 - 10
        height: 35
        width: 300
        write_tab: False
        multiline: False
    TextInput:
        id: password_input
        hint_text: 'Password'
        font_size: 20
        password: True
        center_x: root.width/2
        center_y: root.height/2 - 70
        height: 35
        width: 300
        write_tab: False
        multiline: False
    Button:
        id: login_button
        font_size: 20
        center_x: root.width/2
        center_y: root.height/2 - 150
        text: "Login"
        size: (150,50)
        on_press: root.login()
    Label:
        id: success
        pos: (100,100)
        color: (0,0,0,1)
        text: ""

		
